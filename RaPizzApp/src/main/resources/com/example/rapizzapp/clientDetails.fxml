<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rapizzapp.controllers.ClientDetailsController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <Label text="Détails du Client" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nom :" />
        <TextField fx:id="nomTextField" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Prénom :" />
        <TextField fx:id="prenomTextField" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Numéro d'Abonnement :" />
        <TextField fx:id="numAboTextField" editable="false" style="-fx-background-color: lightgray;" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Solde :" />
        <TextField fx:id="soldeTextField" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Administrateur :" />
        <CheckBox fx:id="adminCheckBox" />
    </HBox>

    <Button text="Enregistrer" onAction="#checkClientDetails"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="" fx:id="confirmLabel" textFill="green"/>
    </HBox>

    <Button text="Supprimer l'utilisateur" onAction="#deleteClient" style="-fx-background-color: red; -fx-text-fill: white;"/>

</VBox>